# Environment variables для Docker Compose
# Скопируйте этот файл в .env и измените значения

# PostgreSQL
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=spotify
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# API
API_PORT=3000
DATABASE_URL=postgresql://admin:admin@postgres:5432/spotify
JWT_SECRET=your_jwt_secret_here

# Web
WEB_PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3000

# Admin
ADMIN_PORT=3002

# Mobile (Expo)
MOBILE_METRO_PORT=8081
MOBILE_DEVTOOLS_PORT=19000
MOBILE_METRO_UI_PORT=19001
MOBILE_WEB_PORT=19006
MOBILE_HOST=192.168.1.100  # Замените на ваш локальный IP для подключения с телефона

# Desktop (Tauri)
DESKTOP_PORT=1420

# Nginx
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
