generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id          String   @id @default(uuid())
  title       String
  cover       String
  artistId    String
  description String?
  createdAt   DateTime @default(now())
  Artist      Artist   @relation(fields: [artistId], references: [id])
  Track       Track[]  @relation("AlbumToTrack")
}

model Artist {
  id              String   @id @default(uuid())
  username        String   @unique
  password        String
  bio             String?
  avatar          String?
  backgroundImage String?
  createdAt       DateTime @default(now())
  Album           Album[]
  Track           Track[]
}

model Playlist {
  id          String   @id @default(uuid())
  title       String
  cover       String
  artistId    String
  description String?
  createdAt   DateTime @default(now())
  userId      String
  User        User     @relation(fields: [userId], references: [id])
  Track       Track[]  @relation("PlaylistToTrack")
}

model Session {
  id            String   @id @default(uuid())
  userId        String
  access_token  String   @unique
  refresh_token String   @unique
  createdAt     DateTime @default(now())
  User          User     @relation(fields: [userId], references: [id])
}

model Track {
  id        String     @id @default(uuid())
  title     String
  audioUrl  String
  cover     String
  artistId  String
  createdAt DateTime   @default(now())
  Artist    Artist     @relation(fields: [artistId], references: [id])
  Album     Album[]    @relation("AlbumToTrack")
  Playlist  Playlist[] @relation("PlaylistToTrack")
  User      User[]     @relation("UserLikedTracks")
}

model User {
  id          String     @id @default(uuid())
  username    String     @unique
  email       String     @unique
  password    String
  avatar      String?
  description String?
  createdAt   DateTime   @default(now())
  Playlist    Playlist[]
  Session     Session[]
  Track       Track[]    @relation("UserLikedTracks")
}
