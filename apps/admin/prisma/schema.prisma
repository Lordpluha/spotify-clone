generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  username    String     @unique
  email       String     @unique
  password    String
  avatar      String?
  description String?
  createdAt   DateTime   @default(now())
  playlists   Playlist[]
  sessions    Session[]
  likedTracks Track[]    @relation("UserLikedTracks")
}

model Session {
  id            String   @id @default(uuid())
  userId        String
  access_token  String   @unique
  refresh_token String   @unique
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
}

model Track {
  id        String     @id @default(uuid())
  title     String
  audioUrl  String
  cover     String
  artistId  String
  createdAt DateTime   @default(now())
  artist    Artist     @relation(fields: [artistId], references: [id])
  albums    Album[]    @relation("AlbumToTrack")
  playlists Playlist[] @relation("PlaylistToTrack")
  likedBy   User[]     @relation("UserLikedTracks")
}

model Artist {
  id              String   @id @default(uuid())
  username        String   @unique
  password        String
  bio             String?
  avatar          String?
  backgroundImage String?
  createdAt       DateTime @default(now())
  albums          Album[]
  tracks          Track[]
}

model Album {
  id          String   @id @default(uuid())
  title       String
  cover       String
  artistId    String
  description String?
  createdAt   DateTime @default(now())
  artist      Artist   @relation(fields: [artistId], references: [id])
  tracks      Track[]  @relation("AlbumToTrack")
}

model Playlist {
  id          String   @id @default(uuid())
  title       String
  cover       String
  artistId    String
  description String?
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  tracks      Track[]  @relation("PlaylistToTrack")
}
