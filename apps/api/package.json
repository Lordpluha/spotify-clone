{
  "name": "@spotify/api",
  "version": "0.0.1",
  "description": "",
  "author": "Lordpluha",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "pnpm exec biome format --write",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "pnpm exec biome lint --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:start": "prisma dev",
    "db:migration:reset": "prisma migrate reset --force",
    "db:migration:start": "prisma migrate dev --name init",
    "db:gen": "prisma generate",
    "db:gen:prod": "prisma generate",
    "db:ui": "prisma studio",
    "db:seed": "prisma db seed",
    "doc:gen": "pnpm dlx @compodoc/compodoc -p tsconfig.json -s -d docs"
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/platform-socket.io": "^11.1.12",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/websockets": "^11.1.12",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.3.0",
    "@spotify/converter": "workspace:*",
    "@spotify/ncs-parser": "workspace:*",
    "bullmq": "^5.66.5",
    "cookie-parser": "^1.4.7",
    "music-metadata": "^11.10.6",
    "nestjs-zod": "^5.1.1",
    "pg": "^8.17.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@compodoc/compodoc": "^1.2.1",
    "@faker-js/faker": "^10.2.0",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@spotify/contracts": "workspace:*",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.8",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/ms": "^2.1.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "prisma": "^7.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@infra/(.*)$": "<rootDir>/infra/$1",
      "^@common/(.*)$": "<rootDir>/common/$1"
    }
  }
}
