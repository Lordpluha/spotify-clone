{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Design Tokens",
  "description": "Design tokens schema for Spotify Clone project",
  "type": "object",
  "properties": {
    "palette": {
      "type": "object",
      "description": "Color palette scales and pure colors",
      "properties": {
        "green": { "$ref": "#/definitions/colorScale" },
        "neutral": { "$ref": "#/definitions/colorScale" },
        "blue": { "$ref": "#/definitions/colorScale" },
        "red": { "$ref": "#/definitions/colorScale" },
        "orange": { "$ref": "#/definitions/colorScale" },
        "purple": { "$ref": "#/definitions/colorScale" },
        "pure": {
          "type": "object",
          "properties": {
            "white": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
            "black": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" }
          },
          "required": ["white", "black"]
        }
      },
      "required": ["green", "neutral", "blue", "red", "orange", "purple", "pure"]
    },
    "spacing": {
      "type": "object",
      "description": "Spacing scale in rem units",
      "patternProperties": {
        "^(0|px|[0-9]+(\\.[0-9]+)?)$": {
          "type": "string",
          "pattern": "^(0|[0-9]+(\\.[0-9]+)?rem|[0-9]+px)$"
        }
      }
    },
    "border-radius": {
      "type": "object",
      "description": "Border radius values",
      "patternProperties": {
        "^[a-z0-9]+$": {
          "type": "string",
          "pattern": "^(0|[0-9]+(\\.[0-9]+)?rem|[0-9]+px)$"
        }
      }
    },
    "border-width": {
      "type": "object",
      "description": "Border width values",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "string",
          "pattern": "^(0|[0-9]+px)$"
        }
      }
    },
    "container": {
      "type": "object",
      "description": "Container width values",
      "patternProperties": {
        "^[a-z0-9]+$": {
          "type": "string",
          "pattern": "^([0-9]+(\\.[0-9]+)?rem|100%)$"
        }
      }
    },
    "breakpoints": {
      "type": "object",
      "description": "Responsive breakpoints in pixels",
      "patternProperties": {
        "^[a-z0-9]+$": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "z-index": {
      "type": "object",
      "description": "Z-index layer values",
      "patternProperties": {
        "^[a-zA-Z-]+$": {
          "type": "number"
        }
      }
    },
    "shadows": {
      "type": "object",
      "description": "Box shadow definitions",
      "patternProperties": {
        "^[a-z0-9]+$": {
          "type": "string"
        }
      }
    },
    "opacity": {
      "type": "object",
      "description": "Opacity values",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },
    "aspect-ratio": {
      "type": "object",
      "description": "Aspect ratio values",
      "patternProperties": {
        "^[a-z]+$": {
          "type": "string"
        }
      }
    },
    "typography": {
      "type": "object",
      "description": "Typography system tokens",
      "properties": {
        "font-family": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "type": "string"
            }
          }
        },
        "font-size": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9]+$": {
              "type": "string",
              "pattern": "^[0-9]+(\\.[0-9]+)?rem$"
            }
          }
        },
        "font-weight": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "type": "number",
              "minimum": 100,
              "maximum": 900
            }
          }
        },
        "line-height": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9]+$": {
              "oneOf": [
                { "type": "number" },
                { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?rem$" }
              ]
            }
          }
        },
        "letter-spacing": {
          "type": "object",
          "patternProperties": {
            "^[a-z]+$": {
              "type": "string",
              "pattern": "^-?[0-9]+(\\.[0-9]+)?em$"
            }
          }
        },
        "semantic": {
          "type": "object",
          "description": "Semantic typography presets",
          "patternProperties": {
            "^[a-zA-Z0-9-]+$": {
              "type": "object",
              "properties": {
                "size": { "type": "string" },
                "weight": { "type": "string" },
                "line-height": { "type": "string" },
                "letter-spacing": { "type": "string" }
              },
              "required": ["size", "weight", "line-height", "letter-spacing"]
            }
          }
        }
      },
      "required": ["font-family", "font-size", "font-weight", "line-height", "letter-spacing", "semantic"]
    },
    "themes": {
      "type": "object",
      "description": "Theme color tokens",
      "properties": {
        "dark": { "$ref": "#/definitions/themeColors" },
        "light": { "$ref": "#/definitions/themeColors" }
      },
      "required": ["dark", "light"]
    }
  },
  "required": ["palette", "spacing", "typography", "themes"],
  "definitions": {
    "colorScale": {
      "type": "object",
      "description": "Color scale from 50 to 900",
      "properties": {
        "50": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "100": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "200": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "300": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "400": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "500": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "600": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "700": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "800": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "900": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" }
      },
      "required": ["50", "100", "200", "300", "400", "500", "600", "700", "800", "900"]
    },
    "themeColors": {
      "type": "object",
      "description": "Semantic theme color tokens",
      "properties": {
        "background": { "type": "string" },
        "background-elevated": { "type": "string" },
        "background-tinted": { "type": "string" },
        "background-secondary": { "type": "string" },
        "background-highlight": { "type": "string" },
        "background-pressed": { "type": "string" },
        "foreground": { "type": "string" },
        "foreground-secondary": { "type": "string" },
        "text": { "type": "string" },
        "text-secondary": { "type": "string" },
        "text-subdued": { "type": "string" },
        "text-muted": { "type": "string" },
        "text-contrast": { "type": "string" },
        "primary": { "type": "string" },
        "primary-hover": { "type": "string" },
        "primary-active": { "type": "string" },
        "primary-foreground": { "type": "string" },
        "secondary": { "type": "string" },
        "secondary-hover": { "type": "string" },
        "secondary-foreground": { "type": "string" },
        "accent": { "type": "string" },
        "accent-foreground": { "type": "string" },
        "success": { "type": "string" },
        "success-foreground": { "type": "string" },
        "error": { "type": "string" },
        "error-foreground": { "type": "string" },
        "warning": { "type": "string" },
        "warning-foreground": { "type": "string" },
        "info": { "type": "string" },
        "info-foreground": { "type": "string" },
        "destructive": { "type": "string" },
        "destructive-foreground": { "type": "string" },
        "muted": { "type": "string" },
        "muted-foreground": { "type": "string" },
        "border": { "type": "string" },
        "border-subtle": { "type": "string" },
        "input": { "type": "string" },
        "ring": { "type": "string" },
        "card": { "type": "string" },
        "card-foreground": { "type": "string" },
        "popover": { "type": "string" },
        "popover-foreground": { "type": "string" },
        "chart-1": { "type": "string" },
        "chart-2": { "type": "string" },
        "chart-3": { "type": "string" },
        "chart-4": { "type": "string" },
        "chart-5": { "type": "string" }
      }
    }
  }
}
